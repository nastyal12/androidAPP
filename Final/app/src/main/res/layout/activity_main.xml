<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:paddingTop="20dp">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6200EC"
        android:title="Main Menu"
        android:titleTextColor="@android:color/white"
        android:elevation="4dp" />


    <Button
        android:id="@+id/btn_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Json -> SQLITE"
        android:background="#D4D4D4"
       />
    <LinearLayout
        android:id="@+id/filter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:textColor="@color/black"
        android:background="@android:color/white">
        <Button
            android:id="@+id/btn_sort_asc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="급여 올림차순"
            android:background="#D4D4D4"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_sort_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="급여 내림차순"
            android:background="#D4D4D4"
            android:textColor="@color/black"  />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/sort_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filter_layout"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@android:color/white">

        <Button
            android:id="@+id/btn_male"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="남자"
             />

        <Button
            android:id="@+id/btn_female"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="여자"
         />


    </LinearLayout>

    <ListView
        android:id="@+id/listview_employees"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sort_layout"
        android:layout_margin="8dp"
        android:divider="#e0e0e0"
        android:dividerHeight="1dp" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</LinearLayout>